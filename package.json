{
  "name": "batect-wrapper-validation-action",
  "description": "GitHub Action to validate integrity of Batect wrapper scripts",
  "main": "src/index.ts",
  "repository": "git@github.com:batect/batect-wrapper-validation-action.git",
  "author": "Batect contributors",
  "license": "Apache-2.0",
  "scripts": {
    "build": "ncc build --source-map --minify",
    "check-format": "prettier --check .",
    "fix-format": "prettier --write .",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "fix-lint": "eslint --fix src/**/*.ts",
    "pre-commit": "yarn check-format && yarn lint && yarn build && yarn test"
  },
  "dependencies": {
    "@actions/core": "1.6.0"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "17.0.24",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "@vercel/ncc": "0.33.4",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "27.5.1",
    "prettier": "2.6.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  }
}
